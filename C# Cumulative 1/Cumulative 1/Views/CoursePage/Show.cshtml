@model Cumulative_1.Models.Course

<h1>Course Details</h1>

<table>
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Course Code</th>
            <th>Teacher ID</th>
            <th>Start Date</th>
            <th>Finish Date</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.coursename</td>
            <td>@Model.coursecode</td>
            <td>@Model.teacherid</td>
            <td>@Model.startdate.ToString("yyyy-MM-dd")</td>
            <td>@Model.finishdate.ToString("yyyy-MM-dd")</td>
        </tr>
    </tbody>
</table>

<div class="mt-30 d-flex gap-3">
    <a class="btn btn-secondary" asp-area="" asp-controller="CoursePage" asp-action="List">Back</a>

    <form method="get" action="/CoursePage/DeleteConfirm/@Model.courseId">
        <button type="submit" class="btn btn-danger">Delete Course</button>
    </form>

    <form method="get" action="/CoursePage/Edit/@Model.courseId">
        <button type="submit" class="btn btn-warning">Update Course</button>
    </form>

</div>

@model Cumulative_1.Models.Student

<h1>Student Details</h1>

<table>
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Student Number</th>
            <th>Enrollment Date</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.StudentId</td>
            <td>@Model.StudentFName</td>
            <td>@Model.StudentLName</td>
            <td>@Model.StudentNumber</td>
            <td>@Model.EnrollDate.ToString("yyyy-MM-dd")</td>
        </tr>
    </tbody>
</table>

<div class="mt-30 d-flex gap-3">
    <a class="btn btn-secondary" asp-area="" asp-controller="StudentPage" asp-action="List">Back</a>


    <form method="get" action="/StudentPage/DeleteConfirm/@Model.StudentId">
        <button type="submit" class="btn btn-danger">Delete Student</button>
    </form>

    <form method="get" action="/StudentPage/Edit/@Model.StudentId">
        <button type="submit" class="btn btn-warning">Update Student</button>
    </form>

</div>